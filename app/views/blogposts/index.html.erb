<div id="blog-container">
<% if @blogposts.empty? %>
  <h1 class="header"> Watch this space for our latest blog posts! </h1>
<% else %>
  <h1 class="header"> Blog </h1>
  <% @blogposts.each do |blogpost| %>
    <div class="post_item">
      <div class="post_title">
        <h1><%= blogpost.title %></h1>
      </div>
      <div class="post_photos">
        <% blogpost.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
      <div class="post_content">
        <p><%= blogpost.content %></p>
      </div>
      <% if user_signed_in? %>
        <div class="btn btn-danger"><%= link_to "Delete", blogpost_path(blogpost), data: {turbo_method: :delete, turbo_confirm: "Delete this post?"}, class:"btn btn-danger btn-sm", id:"delete-button" %></div>
      <% end %>
    </div>
  <% end %>
<% end %>

  <div class="buttons">
    <%= link_to "Home", root_path, class: "btn btn-light"%>
    <% if user_signed_in? %>
    <%= link_to "Create new post", new_blogpost_path, class: "btn btn-success" %>
    <% end %>
  </div>
</div>
