<div id="candidates-container">
  <% if @candidates.empty? %>
  <h1>Currently no applications </h1>
  <% else %>
    <h1>Applications (newest to oldest) </h1>
    <br>
    <div class="accordion" id="accordionExample">
      <% @candidates.reverse.each do |candidate| %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%=candidate.id%>">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#item<%=candidate.id%>" aria-expanded="true" aria-controls="<%=candidate.id%>">
              <%= candidate.first_name %> <%= candidate.last_name%>
            </button>
          </h2>
          <div id="item<%=candidate.id%>" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body candidate-info">

              <div class="info-row">
                <div>Age:</div> <div><%=candidate.age%></div>
              </div>
              <div class="info-row">
                <div>Gender:</div> <div><%=candidate.gender%></div>
              </div>
              <div class="info-row">
                <div>Email:</div> <div><%=candidate.email%></div>
              </div>
              <div class="info-row">
                <div>Nationality:</div> <div><%=candidate.nationality%></div>
              </div>
              <div class="info-row">
                <div>Phone:</div> <div><%=candidate.phone%></div>
              </div>
              <div class="info-row">
                <div>Address:</div> <div><%=candidate.address%></div>
              </div>
              <div class="info-row">
                <div>Project Type:</div> <div><%=candidate.project_type%></div>
              </div>
              <div class="info-row">
                <div>Project Description:</div> <div><%=candidate.project_description%></div>
              </div>
              <div class="info-row">
                <div>Project Budget:</div> <div><%=candidate.project_budget%></div>
              </div>
              <div class="info-row">
                <div>Project Hours:</div> <div><%=candidate.project_hours%></div>
              </div>
              <div class="info-row">
                <div>Portfolio:</div> <div><%=candidate.portfolio%></div>
              </div>
              <div class="info-row">
                <div>Website:</div> <div><%=candidate.website%></div>
              </div>
              <div id="candidate-buttons">
                <div class="btn btn-danger"><%= link_to "Delete", candidate_path(candidate), data: {turbo_method: :delete, turbo_confirm: "Delete #{candidate.first_name}?"}, class:"btn btn-danger btn-sm", id:"delete-button" %></div>
              </div>

            </div>
          </div>

        </div>
      <% end %>
    </div>
  <% end %>
  <br>
  <%= link_to "Home", root_path, class: "btn btn-light"%>

</div>
